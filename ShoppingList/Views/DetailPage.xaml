<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.DetailPage"
             xmlns:viewModel="clr-namespace:ShoppingList.ViewModel"
             x:DataType="viewModel:DetailViewModel"
             Title="Item details">

    <VerticalStackLayout Padding="40, 10">

        <Entry Text="{Binding Item.Title, Mode=TwoWay}"
               FontSize="25"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <Grid Margin="5"
              RowDefinitions="1*"
              ColumnDefinitions=".5*, .5*">
            <VerticalStackLayout Grid.Column="0" Padding="10">
                <Label Text="Priority" Style="{StaticResource StandardValueLabel}" />
                <Label Text="{Binding Item.IsImportant}" Style="{StaticResource StandardValue}" />
            </VerticalStackLayout>
            <Switch IsToggled="{Binding Item.IsImportant, Mode=TwoWay}"
                    Grid.Column="1"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
        </Grid>

        <Grid Margin="5"
              RowDefinitions="1*"
              ColumnDefinitions=".5*, .5*">
            <VerticalStackLayout Grid.Column="0" Padding="10" VerticalOptions="Center">
                <Label Text="Quantity" Style="{StaticResource StandardValueLabel}" />
                <Label Text="{Binding Item.Quantity}" Style="{StaticResource StandardValue}" />
            </VerticalStackLayout>
            <Stepper Value="{Binding Item.Quantity}"
                     Grid.Column="1"
                     Minimum="1"
                     Maximum="99"
                     Increment="1"
                     VerticalOptions="Center"
                     HorizontalOptions="Center" />
        </Grid>

        <Grid Margin="5"
              RowDefinitions="1*">
            <VerticalStackLayout Padding="10">
                <Label Text="From" Style="{StaticResource StandardValueLabel}" />
                <Picker Title="Change store"
                        SelectedItem="{Binding CurrentStore, Mode=TwoWay}"
                        ItemsSource="{Binding Stores}"
                        TextColor="{StaticResource OffBlack}"
                        TitleColor="{StaticResource Primary}"
                        WidthRequest="280"
                        HorizontalOptions="Start" />
            </VerticalStackLayout>
        </Grid>

        <VerticalStackLayout Padding="10, 10, 10, 40" Margin="5" VerticalOptions="Center">
            <Label Text="Added on" Style="{StaticResource StandardValueLabel}" />
            <Label Text="{Binding Item.AddedOn}" Style="{StaticResource StandardValue}" />
        </VerticalStackLayout>
        <Button Text="Save changes"
                Style="{StaticResource StandardButton}"
                Command="{Binding GoBackCommand}" />

    </VerticalStackLayout>

</ContentPage>