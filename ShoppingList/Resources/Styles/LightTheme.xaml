<?xml version="1.0" encoding="utf-8"?>

<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ShoppingList.Resources.Styles.LightTheme">
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryText">#E1E1E1</Color>
    <Color x:Key="PrimaryDark">#AC99EA</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Green">#59D42A</Color>
    <Color x:Key="Pink">#C62191</Color>
    <Color x:Key="PinkLight">#F3B8E0</Color>
    <Color x:Key="OffBlack">#1F1F1F</Color>
    <Color x:Key="OffWhite">#F4F4F4</Color>
    <Color x:Key="Neutral">#C8C8C8</Color>
    <Color x:Key="ThickLineSeparatorColor">#512BD4</Color>

    <Color x:Key="BackgroundColor">White</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray800">#2e2e2e</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <LinearGradientBrush x:Key="StandardGradient" EndPoint="1,1">
        <GradientStop Color="#C62191" Offset="0.1" />
        <GradientStop Color="#512BD4" Offset="1.0" />
    </LinearGradientBrush>
    
    
    <x:Double x:Key="StandardLineHeight">1</x:Double>
    <x:Double x:Key="ThickLineHeight">3</x:Double>
    <x:Double x:Key="StandardSwipeItemHeight">44</x:Double>
    <x:Double x:Key="StandardSwipeItemHeightPlusLineHeight">45</x:Double>

    <Shadow Brush="{StaticResource Black}"
            x:Key="DefaultShadow"
            Offset="5,5"
            Radius="5"
            Opacity="0.7" />
    <Shadow Brush="Black"
            x:Key="ShadowOff"
            Offset="0,0"
            Radius="5"
            Opacity="0.5" />

    <!-- Custom styles -->
    <Style TargetType="Button" x:Key="StandardButton">
        <Setter Property="Background" Value="{StaticResource StandardGradient}" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextTransform" Value="Uppercase" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffWhite}}" />
        <Setter Property="Shadow" Value="{StaticResource DefaultShadow}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="TranslationY" Value="0" />
                            <Setter Property="TranslationX" Value="0" />
                            <Setter Property="Opacity" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1" />
                            <Setter Property="TranslationY" Value="0" />
                            <Setter Property="TranslationX" Value="0" />
                            <Setter Property="Opacity" Value="0.8" />
                            <Setter Property="Shadow" Value="{StaticResource ShadowOff}" />
                            <Setter Property="BorderColor" Value="{StaticResource White}" />
                            <Setter Property="BorderWidth" Value="2" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98" />
                            <Setter Property="TranslationY" Value="2" />
                            <Setter Property="TranslationX" Value="2" />
                            <Setter Property="Shadow" Value="{StaticResource ShadowOff}" />
                            <Setter Property="BorderColor" Value="{StaticResource White}" />
                            <Setter Property="BorderWidth" Value="2" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Label" x:Key="BaseMenu">
        <Setter Property="TextColor" Value="{StaticResource OffWhite}" />
    </Style>

    <Style TargetType="Label" x:Key="MenuHeader" BasedOn="{StaticResource BaseMenu}">
        <Setter Property="FontSize" Value="26" />
    </Style>

    <Style TargetType="Label" x:Key="MenuLabel" BasedOn="{StaticResource BaseMenu}">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" x:Key="StandardValueLabel">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource Gray300}" />
    </Style>

    <Style TargetType="Label" x:Key="StandardValue">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource OffBlack}, Dark={StaticResource OffWhite}}" />
        <Setter Property="FontAttributes" Value="None" />
